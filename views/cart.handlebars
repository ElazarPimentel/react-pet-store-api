<h1>Tu Carrito</h1>
{{#if cart.products.length}}
  <ul>
    {{#each cart.products}}
      <li>
        Producto: {{this.productId.title}} - Cantidad: {{this.quantity}}
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>El carrito está vacío.</p>
{{/if}}
